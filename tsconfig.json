{
    "compilerOptions": {
      "target": "ESNext",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "ESNext",
      "rootDir": "./",
      "moduleResolution": "Node",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "paths": {
        "@/*": [
          "./src/*"
        ]
      }
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "**/*.js"
    ]
  }